{
  "variables": {
    "ssh_name": "packer",
    "ssh_pass": "packer",
    "hostname": "packer-test"
  },

  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Ubuntu_64",
    "iso_url": "http://releases.ubuntu.com/16.04.1/ubuntu-16.04.1-server-amd64.iso",
    "iso_checksum": "d2d939ca0e65816790375f6826e4032f",
    "iso_checksum_type": "md5",

    "ssh_username": "{{user `ssh_name`}}",
    "ssh_password": "{{user `ssh_pass`}}",
    "ssh_wait_timeout": "20m",
    "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
    "headless": true,
    "http_directory" : "resources",
    "http_port_min" : 1001,
    "http_port_max" : 10001,


    "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--vram", "32"]
    ],

    "boot_command" : [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "net.ifnames=0 ",
        "auto-install/enable=true ",
        "debconf/priority=critical ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
        "<enter>"
    ]
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "create_vagrant_directory.sh"
    },
    {
      "type": "file",
      "source": "dump.sql",
      "destination": "/vagrant/dump.sql"
    },
    {
      "type": "file",
      "source": "simulateUsb.sh",
      "destination": "/vagrant/simulateUsb.sh"
    },
    {
      "type": "shell",
      "script": "vagrant_provisioner.sh"
    },
    {
      "type": "file",
      "source": "webapps/",
      "destination": "/var/lib/tomcat8/webapps"
    }
  ]
}
